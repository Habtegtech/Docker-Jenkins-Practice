pipeline {
    agent any  // Use any available Jenkins agent

    environment {
        // Define environment variables if needed, e.g. Python version
        PYTHON_VERSION = '3.12'
    }

    stages {
        stage('Setup') {
            steps {
                echo 'Setting up environment...'
                // Ensure Python and pip are installed
                sh 'python --version'  // Verify Python version
                sh 'pip install --upgrade pip'  // Upgrade pip
                sh 'pip install -r requirements.txt'  // Install dependencies from requirements.txt
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running Python tests...'
                // Run Python tests using unittest or pytest
                sh 'python -m unittest discover'  // Or use pytest if you prefer
            }
        }

